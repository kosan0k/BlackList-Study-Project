<Window x:Class="BlackList.Ui.Wpf.Host.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackList.Ui.Wpf.Host"
        mc:Ignorable="d"
        Title="Black Listnb " Height="800" Width="1200">
    <Grid Background="#697995">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="7*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Grid.Column="1"
                BorderBrush="#BDC2CB"
                BorderThickness="5"
                CornerRadius="0 0 10 10">
            <Grid x:Name="HeaderData"              
              Background="#BDC2CB">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="7*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Find person"/>
            </Grid>
        </Border>
    </Grid>
</Window>
